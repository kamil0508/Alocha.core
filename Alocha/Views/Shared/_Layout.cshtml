<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlochawebV1._0.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/sideMenu/side-menu.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
            <a class="navbar-brand" href="#">ALOCHA-WEB</a>
            @*@if (User.Identity.IsAuthenticated)
            {*@
                <!-- Use any element to open the sidenav -->
                <span style="font-size:20px; cursor:pointer" onclick="openNav()">Menu &#9776;</span>
            @*}*@
        </nav>
    </header>
    <div class="container">
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            @User.Identity.Name
            <a href="#">Najbliższe zdarzenia</a>
            <a href="#">Lista loch</a>
            <a href="#">Dodaj loche</a>
            <a href="#">Statystyki</a>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Wyloguj", "LogOut", "Account")
            }
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Alocha-web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/sideMenu/side-menu.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
