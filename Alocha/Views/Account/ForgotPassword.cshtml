@model Alocha.WebUi.Models.AccountVM.ForgotPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" />
</head>
<body>
    <div class="mt-5 mx-auto col-sm-4 forgot-password-div py-2">
        <form id="account" method="post">
            <h2 class="text-center"><b>Przypomnij hasło</b></h2>
            <div class="form-group col-sm-12">
                @Html.LabelFor(m => m.Email)
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation text-danger" })
            </div>
            <div class="col text-center">
                <button type="submit" class="btn btn-success btn-block">Przypomnij</button>
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</body>
</html>
