@model Alocha.WebUi.Models.AccountVM.LogInVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" />
</head>
<body>
    <div class="row h-100 col-sm-12" style="margin-top:150px;">
        <div class="col-sm-12 my-auto">
            <div class="card card-block w-25 mx-auto center-div">
                <form id="account" method="post">
                    <h2 class="text-center"><b>&bull; Alocha &bull;</b></h2>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.Email)
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation text-danger" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.Password)
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Hasło" } })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation text-danger" })
                    </div>
                    <div class="form-check">
                        @Html.EditorFor(m => m.RememberMe, new { @class = "form-control" })<Text> Zapamiętaj mnie</Text>
                    </div>
                    <div class="col text-center">
                        <button type="submit" class="btn btn-success btn-block">Zaloguj</button>
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </form>
                <div class="col text-center">
                    <a class="btn btn-info btn-block" href="/Account/Register">Zarejestruj</a>
                </div>
                <div class="text-right">
                    @Html.ActionLink("Nie pamietasz hasła?", "ForgotPassword", "Account")
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</body>
</html>
