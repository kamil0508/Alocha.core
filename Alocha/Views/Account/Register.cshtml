@model Alocha.WebUi.Models.AccountVM.RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
    <div class="row h-100 col-sm-12 mt-5">
        <div class="col-sm-12 my-auto">
            <div class="card card-block w-25 mx-auto register-div">
                <form id="account" method="post">
                    <h2 class="text-center"><b>&bull; Alocha &bull;</b></h2>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.Email)
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation text-danger" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.Password)
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Hasło", id="password" } })
                        <span toggle="#password" class="fa fa-eye field-icon toggle-password" id="togglePassword"></span>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation text-danger" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Potwierdzenie hasła" } })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation text-danger" })
                    </div>
                    <div class="col text-center">
                        <button type="submit" class="btn btn-warning btn-block">Zarejestruj</button>
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/passwordVisibility.js"></script>
</body>
</html>
