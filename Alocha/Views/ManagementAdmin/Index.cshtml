@model Alocha.WebUi.Models.ManagementAdminVM.ManagementIndexVM
@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12 col-lg-12">
    <div class="panel">
        <div class="panel-heading">
            <h3><span class="lstick"></span>Urzytkownicy</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover" cellspacing="0" style="width:100%" id="dataTables">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().EmailConfirmed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().PhoneNumberConfirmed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().AccessFailedCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().LockoutEnd)
                        </th>
                        <th>Opcje</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().EmailConfirmed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().PhoneNumberConfirmed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().AccessFailedCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Users.FirstOrDefault().LockoutEnd)
                        </th>
                        <th>Opcje</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                            <td>
                                @if (item.EmailConfirmed)
                                {
                                    <h6 class="text-success">Potwierdzony</h6>
                                }
                                else
                                {
                                    <h6 class="text-secondary">Niepotwierdzony</h6>
                                }
                            </td>
                            <td>
                                @if (item.PhoneNumberConfirmed)
                                {
                                    <h6 class="text-success">Potwierdzony</h6>
                                }
                                else
                                {
                                    <h6 class="text-secondary">Niepotwierdzony</h6>
                                }
                            </td>
                            <td>
                                <h6>@Html.DisplayFor(m => item.AccessFailedCount)</h6>
                            </td>
                            <td>
                                <h6>@Html.DisplayFor(m => item.LockoutEnd)</h6>
                            </td>
                            <td>
                                <div class="dropdown btn-block pull-right">
                                    <button class="btn btn-xs btn-primary btn-block dropdown-toggle" data-toggle="dropdown">
                                        Opcje
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Wyślij potwierdzenie Email", "SendConfirm", new { id = item.Email })</li>
                                        <li>@Html.ActionLink("Usuń", "Delete", new { id = item.Email}, new { onclick = "return confirm('Czy napewno chcesz usunąć użytkownika: "+item.Email+" ?');"})</li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/datatables-filters-classic.js"></script>>
}


